{
  "name": "custom-escrow",
  "version": "1.0.0",
  "description": "Production-grade token sale platform built on Solana with enterprise security features",
  "main": "index.js",
  "scripts": {
    "test": "yarn run ts-mocha -p ./tsconfig.json tests/escrow-*.ts",
    "test:validation": "yarn run ts-mocha -p ./tsconfig.json tests/escrow-validation.ts",
    "test:integration": "yarn run ts-mocha -p ./tsconfig.json tests/escrow-integration.ts",
    "test:deployment": "yarn run ts-mocha -p ./tsconfig.json tests/escrow-deployment.ts",
    "test:devnet": "ANCHOR_PROVIDER_URL=https://api.devnet.solana.com yarn run ts-mocha -p ./tsconfig.json tests/devnet-deployment-test.ts",
    "build": "anchor build",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "clean": "anchor clean"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.3",
    "@solana/spl-token": "^0.4.8",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.7.0"
  },
  "dependencies": {},
  "keywords": [
    "solana",
    "anchor",
    "escrow",
    "blockchain",
    "smart-contract"
  ],
  "author": "Custom Escrow Team",
  "license": "MIT"
}