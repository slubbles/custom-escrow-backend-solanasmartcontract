{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "tests/**/*",
    "migrations/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target"
  ]
}